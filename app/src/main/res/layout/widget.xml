<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/standard_separation"
    android:paddingRight="@dimen/standard_separation"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/msgLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:id="@+id/textViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/loading"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retry_button"
            android:textSize="12sp"
            android:layout_marginTop="@dimen/form_margin_top"
            style="@style/AppTheme.Widget.Button"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dataLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/dataLayout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/recyclerview_selector"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginLeft="@dimen/standard_separation"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cover1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/cover_widget"
                android:src="@drawable/cover_example"/>

            <TextView
                android:id="@+id/textViewRelease1Date1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                tools:text="13/04/2013"/>

            <TextView
                android:id="@+id/textViewRelease1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                tools:text="saxon"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/dataLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/recyclerview_selector"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginLeft="@dimen/standard_separation_half"
            android:layout_marginRight="@dimen/standard_separation_half"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cover2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/cover_widget"
                android:src="@drawable/cover_example"/>

            <TextView
                android:id="@+id/textViewRelease1Date2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/textViewRelease2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/dataLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/recyclerview_selector"
            android:layout_marginRight="@dimen/standard_separation"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cover3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/cover_widget"
                android:src="@drawable/cover_example"/>

            <TextView
                android:id="@+id/textViewDate3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/textViewRelease3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>

